generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  login     String   @unique
  password  String
  name      String   @default("Администратор")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Lead {
  id        String     @id @default(cuid())
  name      String
  email     String
  phone     String     @default("")
  message   String     @default("")
  status    LeadStatus @default(NEW)
  note      String     @default("")
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("leads")
}

model Settings {
  id    String @id @default(cuid())
  key   String @unique
  value String

  @@map("settings")
}

enum LeadStatus {
  NEW
  IN_PROGRESS
  COMPLETED
  REJECTED
}
